<% layout('layout') %>

<% if(data.length === 0) {%>
   <h3>Search not found </h3>
<% } else {%>
<h3> Results for <%= query %></h3>
<div class="container">
   <div class="row body">
      <% for (var i = 0; i < data.length; i++) {%>
      <div class="col-md-4">
         <a href="/product/<%= data[i].id %>">
            <div class="thumbnail">
               <img src="<%= data[i].image %>" alt=""/>
               <div class="caption">
                  <h3><%= data[i].name%></h3>
                  <p><%= data[i].category.name%></p>
                  <p><%= data[i].price%></p>
               </div>
            </div>
         </a>
      </div>
      <%}%>
   </div>


</div>
<% }%>