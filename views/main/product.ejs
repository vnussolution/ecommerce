<% layout('layout') %>

<div class="container">
   <div class="row body">

      <div class="col-md-4">
         <img src="<%= product.image %>" alt=""/>
      </div>
      <div class="col-md-4">

      </div>
      <div class="col-md-4">
         <h3><%= product.name %></h3>
         <h1><%= product.price %></h1>

         <form method="post">
            <div class="btn-group" role="group">
               <input type="hidden" name="quantity" id="quantity" value="1"/>
               <button class="btn btn-default" id="minus" type="button">-</button>
               <button class="btn btn-default" id="total" type="button">1</button>
               <button class="btn btn-default" id="plus" type="button">+</button>
            </div>
            <div class="form-group">
               <input type="hidden" name="product_id" id="product_id" value="<%= product._id%>"/>
               <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price%>"/>
               <input type="text" name="item" class="form-control" value="<%= product.name%>"/>
               <input type="text" name="priceValue" class="form-control" id="priceValue" value="<%= product.price%>"/>

            </div>

            <% if(user) { %>
               <button type="submit" class="btn btn-primary btn-lg">Add to cart</button>
            <% } else { %>
            <a href="/signup" class="btn btn-warning btn-lg"> Signup to begin buying...</a>
            <% } %>
         </form>
      </div>
   </div>

</div>