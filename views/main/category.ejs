<% layout('layout') -%>

<div class="container">
   <h1> <%= (products === 'undefined')?( 'Category : '+products[0].category.name):('No items for this category') %></h1>
   <div class="row body">
      <% for (var i = 0; i < products.length; i++) {%>
      <div class="col-md-4">
         <a href="/product/<%= products[i]._id %>">
            <div class="thumbnail">
               <img src="<%= products[i].image %>" alt=""/>
               <div class="caption">
                  <h3><%= products[i].name%></h3>
                  <p><%= products[i].category.name%></p>
                  <p><%= products[i].price%></p>
               </div>
            </div>
         </a>
      </div>
      <%}%>
   </div>
</div>